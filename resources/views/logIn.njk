{% extends 'master' %}
  
{% block content %}
      


<div class="panel panel-default">
  <div class="panel-heading">Bejelentkezés</div>
  <div class="panel-body">

      {% if old('errors') %}
        <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">Hibalista</h3>
        </div>
        <div class="panel-body">
            <ul>
      <!--       <li>   {{ old('username') }}</li> -->
            {% for error in old('errors') %}
            <li>{{ error.message }}</li>
            {% endfor %}
            </ul>
        </div>
        </div>
    {% endif %}
    

    <form class="form-horizontal" action="{{ 'do_user_login' | route }}" method="POST" enctype="multipart/form-data">
    {{ csrfField }}
    <fieldset>
        <div class="form-group">
        <label for="email" class="col-lg-2 control-label">Email</label>
        <div class="col-lg-10">
            <input type="email" class="form-control" id="email" name="email" placeholder="Email">
        </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-2 control-label">Jelszó</label>
            <div class="col-lg-10">
                <input type="password" class="form-control" id="password" name="password" placeholder="Jelszó">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
    </form>





  </div>
</div>


{% endblock %}
