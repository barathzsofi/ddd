{% extends 'master' %}

{% block scripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>
{% endblock %}
  
{% block content %}

<ul class="list-group">
    {% for category in categories %}
        <a href= "{{ 'book_category' | route({id: category.id}) }}"> 
          <li class="list-group-item">
              {{ category.name }}
          </li>
        </a>
    {% endfor %}
</ul>
<div class="panel panel-default category"> 
 <!--   <div class="panel panel-default"> -->
  <div class="panel-heading">Új műfaj</div>
  <div class="panel-body">


    {% if old('errors') %}
        <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">Hibalista</h3>
        </div>
        <div class="panel-body">
            <ul>
            {% for error in old('errors') %}
            <li>{{ error.message }}</li>
            {% endfor %}
            </ul>
        </div>
        </div>
    {% endif %}
    

    <form class="form-horizontal" action="/createCategory" method="POST" enctype="multipart/form-data" data-toggle="validator">

        {{ csrfField }}

  <!--      <fieldset> -->
            <div class="form-group has-feedback">
                <label for="name" class="col-lg-2 control-label">Műfaj neve</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="name" name = "name" required>
                    <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                    <div class="help-block with-errors"></div>
                </div>
            </div>



            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
   <!--     </fieldset> -->
    </form>





  </div>
<!--  </div> -->
</div>


{% endblock %}
