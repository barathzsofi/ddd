{% extends 'master' %}
  
{% block content %}


<div class="jumbotron">
    <h2 style='margin-top: -3px'>Megrendelések listája</h2>
    <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                    <th>Rendelés azonosító</th>
                    <th>Rendelés ideje</th>
                    <th>Rendelés összege</th>
                    <th>Státusz</th>

                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                    {% if order.status == 'Lezárt' %}
                        <tr class="active" onclick="window.document.location='{{ 'order_details' | route({id: order.id}) }}';">                    
                    {% elif order.status == 'Új' %}
                        <tr class="danger" onclick="window.document.location='{{ 'order_details' | route({id: order.id}) }}';">
                    {% elif order.status == 'Átvehető' %}
                        <tr class="info" onclick="window.document.location='{{ 'order_details' | route({id: order.id}) }}';">
                    {% else %}
                        <tr class="success" onclick="window.document.location='{{ 'order_details' | route({id: order.id}) }}';">
                    {% endif %}
  <!--                  <tr class="danger" onclick="window.document.location='{{ 'order_details' | route({id: order.id}) }}';">
    -->                <td>{{ order.id }}</td>
                    <td>{{ order.created_at }}</td>
                    <td>{{ order.price }} Ft</td>
                    <td>{{ order.status }}</td>
       <!--             <td><a href="{{ 'order_details' | route({id: order.id}) }}">+</a></td> -->
                    {% if user.username == 'admin' %}
                        {% if order.status != 'Lezárt'%}
                        <td><a href="{{ 'order_edit' | route({id: order.id}) }}">Módosítás</a></td>
                        <td><a href="{{ 'order_delete' | route({id: order.id}) }}">Megrendelés törlése</a></td>
                        {% else %}
                        <td>-</td>
                        <td>-</td>
                        {% endif %}
                    {% endif %}
                    
                    </tr>
                    {% endfor %}
                    
  
                </tbody>
    </table> 
</div>


{% endblock %}
