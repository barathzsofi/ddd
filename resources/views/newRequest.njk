{% extends 'master' %}

{% block scripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>
{% endblock %}
  
{% block content %}
      
    <div class="panel panel-default">
  <div class="panel-heading">Kérés</div>
  <div class="panel-body">


    {% if old('errors') %}
        <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">Hibalista</h3>
        </div>
        <div class="panel-body">
            <ul>
            {% for error in old('errors') %}
            <li>{{ error.message }}</li>
            {% endfor %}
            </ul>
        </div>
        </div>
    {% endif %}
    

    <form class="form-horizontal"  action="{{ 'do_request_create' | route }}" method="POST" enctype="multipart/form-data"  data-toggle="validator">

        {{ csrfField }}

        <div class="form-group has-feedback">
            <label for="writer" class="col-lg-2 control-label">Író(k)</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="writer" name='writer' required>
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="form-group has-feedback">
            <label for="title" class="col-lg-2 control-label">Cím</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="title" name='title' required>
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="form-group has-feedback">
            <label for="price" class="col-lg-2 control-label">Maximális ár</label>
            <div class="col-lg-10">
                <input type="number" class="form-control" id="price" name='price' required>
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="form-group has-feedback">
            <label for="language" class="col-lg-2 control-label">Nyelv</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="language" name='language' required>
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="form-group">
            <label for="publisher" class="col-lg-2 control-label">Kiadó</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="publisher" name='publisher'>
            </div>
        </div>
        <div class="form-group">
            <label for="releaseDate" class="col-lg-2 control-label">Kiadás éve</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="releaseDate" name='releaseDate'>
            </div>
        </div>
        <div class="form-group">
        <label for="remark" class="col-lg-2 control-label">Egyéb</label>
        <div class="col-lg-10">
            <textarea class="form-control" rows="3" id="remark" name='remark'></textarea>
        </div>
        </div>
       
   
        <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
            <button type="reset" class="btn btn-default">Cancel</button>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        </div>


    </form>





  </div>
</div>



{% endblock %}
