{% extends 'master' %}
  
{% block content %}


<div class="jumbotron">
    <h2 style='margin-top: -3px'>Felhasználók listája</h2>
    <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                    <th>Id</th>
                    <th>Felhasználónév</th>
                    <th>Vezetéknév</th>
                    <th>Keresztnév</th>
                    <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr class="danger">
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.email }}</td>
                    </tr>
                    {% endfor %}
                    
  
                </tbody>
    </table> 
</div>


{% endblock %}
